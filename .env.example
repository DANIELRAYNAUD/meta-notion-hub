# Meta Notion Hub - Configuração de Ambiente

# ============================================
# NOTION API
# ============================================
# Obtenha em: https://www.notion.so/my-integrations
NOTION_API_KEY=secret_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ID da página principal Meta Notion Hub (copie da URL)
# Exemplo: https://notion.so/Meta-Notion-Hub-2e1541aa09a580df... → ID = 2e1541aa09a580df...
NOTION_PAGE_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# IDs das databases do Notion (preenchidos automaticamente pelo script setup-notion-databases.js)
NOTION_LEADS_DB=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
NOTION_POSTS_DB=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
NOTION_METRICS_DB=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
NOTION_MESSAGES_DB=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# META / FACEBOOK API
# ============================================
# Obtenha em: https://developers.facebook.com/apps
META_APP_ID=your_app_id
META_APP_SECRET=your_app_secret
META_ACCESS_TOKEN=your_long_lived_access_token

# ID da página do Facebook
META_PAGE_ID=your_page_id

# ID da conta de anúncios (para métricas)
META_AD_ACCOUNT_ID=act_xxxxxxxxxx

# ============================================
# WHATSAPP BUSINESS API
# ============================================
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id

# ============================================
# WEBHOOKS
# ============================================
# Token de verificação do webhook (você define)
WEBHOOK_VERIFY_TOKEN=seu_token_secreto_aqui

# ============================================
# SERVIDOR
# ============================================
PORT=3000
NODE_ENV=development
